FROM python:3.12-slim-trixie AS build-stage

WORKDIR /app
COPY ./requirements.txt /app
RUN pip install --no-cache-dir -r requirements.txt

FROM python:3.12-slim-trixie AS runtime-stage

ARG user=appuser
ARG group=appgroup
ARG uid=6000
ARG gid=6000

RUN addgroup --gid ${gid} ${group} && adduser --uid ${uid} --ingroup ${group} ${user} --shell /sbin/nologin --disabled-password

COPY --from=build-stage /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=build-stage /usr/local/bin /usr/local/bin
COPY src/ /app/src
RUN mkdir -p /app/data && chown -R ${user}:${group} /app

USER ${user}

EXPOSE 8000

WORKDIR /app/src

ENTRYPOINT ["gunicorn", "app:app", "--bind", "0.0.0.0:8000", "--workers", "2", "--preload"]
